<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".course05.basics.DrawBasicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="基础用法" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Paint使用" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="文本绘制" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="裁剪和几何" />
    </LinearLayout>

    <!--  Canvas 和 Paint的常用方法  -->
    <ct.com.ui.course05.basics.CanvasBasicView
        android:id="@+id/viewBasic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!--  Paint使用详解  -->
    <ct.com.ui.course05.basics.PaintView
        android:id="@+id/viewPaint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Canvas对文字的绘制   -->

    <ct.com.ui.course05.basics.DrawTextView
        android:id="@+id/viewText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgClip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/mm"
        android:visibility="gone" />
    <!--  Canvas裁剪和几何变换  -->
    <ct.com.ui.course05.basics.ClipView
        android:id="@+id/viewClip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:background="#00F0F0"
        android:visibility="gone" />


    <ct.com.ui.course05.basics.PorterDuffView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>