<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".course10.Course10Activity">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_course10_recycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="复用"
        app:layout_constraintEnd_toStartOf="@+id/btn_course10_manager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_course10_manager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自定义LayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_course10_recycle"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCurse10List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_course10_recycle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_course10"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCurse10List"

        />

</androidx.constraintlayout.widget.ConstraintLayout>