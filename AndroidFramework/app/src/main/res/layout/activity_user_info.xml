<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".jetpack2.ui.UserInfoActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff00ff"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="初始化信息" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_userInfo_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="更新用户信息" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_userInfo_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取用户信息(LiveData)" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_userInfo_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取用户信息" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_userInfo_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取用户列表数据" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_userInfo_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="通过网络获取的数据" />


    </LinearLayout>
</layout>