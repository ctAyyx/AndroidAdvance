<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".jetpack2.ui.GankIoActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用Retrofit和协程" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取详情数据" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取详情数据和状态" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="通过Retrofit协程获取数据" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="th语言" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo_05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="zh语言" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_gankIo_06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试修改数据库更新UI" />

</LinearLayout>