<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_storage_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="应用专属:内部存储空间" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_storage_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="应用专属:外部存储空间" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_storage_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="共享空间:获取媒体数据(Video)" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_storage_04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="共享空间:获取媒体数据(Video)封面" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_storage"
        android:layout_width="240dp"
        android:visibility="gone"
        android:layout_height="320dp" />

    <VideoView
        android:id="@+id/video_storage"
        android:layout_width="240dp"
        android:layout_height="320dp" />

</LinearLayout>